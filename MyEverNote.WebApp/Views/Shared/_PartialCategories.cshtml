@using MyEverNote.WebApp.Models
@using MyEvernote.Entities

@{
    List<Category> list = CacheHelper.GetCategoriesFromCache();
}

<p class="display-4">Kategoriler</p>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item list-group-item-action">
        <i class="fa fa-th-list mr-2"></i>Tümü
    </a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item list-group-item-action">
            <i class="fa fa-th-list mr-2"></i>@cat.Title
        </a>
    }
</div>